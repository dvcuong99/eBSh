@model eBSH.Models.RefCode
@{
    ViewBag.Title = "Thêm mới mã tham chiếu";
    Layout = "~/Areas/manage/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("Create", "RefCodeManage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="box col-md-12">
        <h3>Thông tin</h3><br />
        <div class="text-danger">@ViewBag.Message</div>
        <div class="form-group col-md-6">
            <div class="form-group">
                <label class="control-label col-md-3">Mã khuyến mại</label>
                <div class=" col-md-9">
                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Đơn vị</label>
                <div class=" col-md-9">
                    @Html.EditorFor(model => model.Ma_Dvi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Ma_Dvi, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Mã BH</label>
                <div class=" col-md-9">
                    @Html.DropDownList("MA_BH", new SelectList(ViewBag.ListMaBH, "MaBH", "BHName"), new { @class = "form-control dropdown" })
                    @Html.ValidationMessageFor(m => m.Ma_BH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Chương trình BH</label>
                <div class=" col-md-9">
                    @Html.DropDownList("CTBH", new SelectList(ViewBag.ListCTBH, "CTBH", "CTBHName"), new { @class = "form-control dropdown" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3">Kênh KT</label>

                <div class=" col-md-4">
                    @Html.EditorFor(model => model.Kenh_KT, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class=" col-md-1">
                    <label class="control-label">Đại Lý</label>
                </div>
                <div class=" col-md-4">
                    @Html.EditorFor(model => model.Ma_DL, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-md-3">NQL</label>

                <div class=" col-md-4">
                    @Html.EditorFor(model => model.Ma_NQL, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class=" col-md-1">
                    <label class="control-label">NSD</label>
                </div>
                <div class=" col-md-4">
                    @Html.EditorFor(model => model.Ma_NSD, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>


        </div>
        <div class="form-group col-md-6">
            <div class="form-group">
                <label class="control-label col-md-3">Tỷ lệ khuyến mại</label>
                <div class=" col-md-4">
                    <div>
                        @Html.EditorFor(model => model.TL, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                        @Html.ValidationMessageFor(m => m.TL, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class=" col-md-1">
                    <label class="control-label">Mức TN</label>
                </div>
                <div class=" col-md-4">
                    <div id="datepicker-group" class="input-group date" data-date-format="dd/mm/yyyy">
                        @Html.EditorFor(model => model.MTN, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class=" col-md-12">

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3">Hiệu lực</label>
                <div class=" col-md-4">
                    <div id="datepicker-group" class="input-group date" data-date-format="dd/mm/yyyy">
                        @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", @placeholder = "dd/MM/yyyy", @onkeyup = "autoInsertSlash(this)" })
                        @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class=" col-md-1">
                    <label class="control-label">đến</label>
                </div>
                <div class=" col-md-4">
                    <div id="datepicker-group" class="input-group date" data-date-format="dd/mm/yyyy">
                        @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", @placeholder = "dd/MM/yyyy", @onkeyup = "autoInsertSlash(this)" })
                        @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-3"></div>
                <div class=" col-md-8">
                    <input type="submit" value="Thêm thẻ tham chiếu" class="btn btn-flat btn-primary" />
                </div>
            </div>

        </div>
    </div>
}

    <script>
        function autoInsertSlash(input) {
            let value = input.value;
            if (value.length === 2 || value.length === 5) {
                value += '/';
            }
            input.value = value;
        }
    </script>