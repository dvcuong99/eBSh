@using eBSH.Models
@model eBSH.Models.AcountViewModel
@{
    ViewBag.Title = "Edit tài khoản";
    Layout = "~/Areas/manage/Views/Shared/_AdminLayout.cshtml";
}
<div class="box">
    <div class="col-md-6 mt-3 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Thông tin tài khoản</h4>
                @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.UserId)
                    @Html.HiddenFor(model => model.UserName)
                    <div class="form-group">
                        <label>User ID:@Model.UserId</label>
                    </div>
                    <div class="form-group">
                        <label>UserName:@Model.UserName</label>
                    </div>
                    <div class="form-group">
                        <label>Email:@Model.Email</label>
                        @*@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })*@
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Trạng thái:</label>
                        @Html.DropDownListFor(m => m.TT, new SelectList(ViewBag.listTT, "Value", "Text", @Model.TT), new { @class = "form-control col-md-4" })
                    </div>
                    <div class="form-group">
                        <label>Quyền</label>
                        @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.listRole, "Value", "Text"), new { @class = "form-control col-md-4" })
                    </div>
                    <div class="form-group">
                        <label>Ngày tạo: @Model.CreateDate</label>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>