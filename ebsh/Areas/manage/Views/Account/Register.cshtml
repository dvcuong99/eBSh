@using eBSH.Models
@model eBSH.Models.RegisterViewModel

@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Areas/manage/Views/Shared/_AdminLayout.cshtml";
}
<div class="login-box">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div style="text-align:center">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="login-form-body">
            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label">Email</label>
                </div>
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label">Mật khẩu</label>
                </div>
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label">Xác nhận mật khẩu</label>
                </div>
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label">Quyền truy cập</label>
                </div>
                <div class="col-md-12">
                    @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
                </div>
            </div>
            <div class="submit-btn-area">
                <button id="form_submit" type="submit" class="btn btn-primary btn-lg btn-block">Đăng ký <i class="ti-arrow-right"></i></button>
            </div>
        </div>
    }
</div>

