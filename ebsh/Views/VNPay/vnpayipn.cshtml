@model CyberGuard.Models.OrderVM
@{
    ViewBag.Title = "Xác nhận thanh toán";
}

<div class="container">
    <div class="header clearfix">
        <h3 class="text-muted">Xác nhận thanh toán đơn bảo hiểm CyberShield</h3>
    </div>
    <div class="table-responsive">
        @using (Html.BeginForm("", "vnpay"))
            {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Khách hàng: @Model.cyberInf.KH</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Địa chỉ: @Model.cyberInf.DCHIKH</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số CMND/ Hộ chiếu/ Căn cước: @Model.cyberInf.SO_CC</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày cấp CMND/ Hộ chiếu/ Căn cước: @Model.cyberInf.NG_CAPCC</label>
                    </div>

                    <div class="form-group">
                        <label>Nơi cấp CMND/ Hộ chiếu/ Căn cước: @Model.cyberInf.NOI_CAPCC</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>Phí bảo hiểm: @Model.orderInf.Amount VNĐ</label>
            </div>
            <div class="form-group">
                <label>Nội dung thanh toán: @Model.orderInf.OrderDescription</label>
            </div>
           
            <input type="submit" name="btnPay" value="Thanh toán" id="btnPay" class="btn btn-default">

                <!--button id="btnPayPopup" type="submit" class="btn btn-default">Thanh toán (Popup)</button-->
        }
    </div>
</div>
