@using System.Web.Optimization
@using WebHelpers.Mvc5.Enum
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
        {
            @ViewBag.Title@: 
        }
    </title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/Bundles/css")

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font: Source Sans Pro -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
</head>
<body class="skin-blue-light layout-top-nav">
    <header class="main-header">
        <nav class="navbar navbar-static-top">
            @* BEGIN Logo *@
            <div class="container-fluid">
                <div class="navbar-header">
                    <a href="@Url.Action("index", "home")" class="logo">
                        <span class="logo-lg">
                            <img src="~/Content/img/bsh_l.png" height="50" />
                        </span>
                    </a>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                        <i class="fa fa-bars"></i>
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="content-wrapper" style="min-height: 926px;">
        <div class="container">
            @RenderBody()           
        </div>
    </div>
    <footer class="main-footer">
        <b>Tổng công ty cổ phần Bảo hiểm Sài Gòn- Hà Nội</b>
        <br />Địa chỉ: 86 Bà Triệu, Phường Hàng Bài, Quận Hoàn Kiếm, TP Hà Nội.
        <br />Tel: 024.37931111 * Fax: 024. 37931155  *  Email: info@bshc.com.vn

        <div class="pull-right hidden-xs">
            <strong> <a href="https://bshc.com.vn">BSH</a></strong>
            © 2020 All rights reserved.
        </div>
    </footer>
</body>
</html>
<script src="@RouteJs.RouteJsHandler.HandlerUrl"></script>
<script src="@EnumHandler.HandlerUrl"></script>
@Scripts.Render("~/Bundles/js")
@RenderSection("ViewSpecificJavascript", required: false)
@RenderSection("scripts", false)

